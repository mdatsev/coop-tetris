{
    "extends": "eslint:all",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "space-before-function-paren": "off",
        "no-unused-vars": "off",
        "sort-keys": "off",
        "require-jsdoc": "off",
        "func-style": "off",
        "quotes": [
            "warn",
            "single"
        ],
        "no-console": "off",
        "no-undef": "off",
        "eol-last": [
            "error",
            "never"
        ],
        "no-magic-numbers": [
            "error",
            {
                "ignore": [
                    0
                ]
            }
        ],
        "no-use-before-define": "off",
        "no-bitwise": "warn",
        "dot-location": [
            "error",
            "property"
        ],
        "sort-vars": "off",
        "padded-blocks": [
            "error",
            "never"
        ],
        "capitalized-comments": "off",
        "one-var": "warn",
        "no-var": "warn",
        "spaced-comment": "off",
        "prefer-arrow-callback": "warn",
        "func-names": "warn",
        "newline-after-var": "off",
        "quote-props": [
            "error",
            "as-needed"
        ],
        "object-curly-spacing": "off",
        "max-params": "off",
        "no-ternary": "off",
        "multiline-ternary": "off",
        "vars-on-top": "warn",
        "indent": "off",
        "linebreak-style": "off",
        "id-length": "off",
        "no-plusplus": "off",
        "no-extra-parens": [
            "warn",
            "all",
            {
                "nestedBinaryExpressions": false
            }
        ],
        "no-mixed-operators": "off",
        "newline-before-return": "off",
        "max-len": "warn",
        "max-statements": "warn"
    }
}